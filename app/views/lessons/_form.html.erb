<%= form_with model: [lesson.new_record? ? @segment : nil, lesson].compact do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :introduction %>
    <%= form.text_area :introduction %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div>
    <%= form.label :summary %>
    <%= form.text_area :summary %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
