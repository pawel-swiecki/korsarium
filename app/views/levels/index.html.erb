<%= turbo_frame_tag "levels", class: "wa-stack wa-gap-3xl" do %>
  <wa-dropdown size="large" placement="bottom" class="center">
    <wa-button pill variant="brand" slot="trigger" with-caret>Level</wa-button>

    <% @levels.each do |level| %>
      <wa-dropdown-item><%= link_to level.title, level, data: {turbo_frame: "level"} %></wa-dropdown-item>
    <% end %>
  </wa-dropdown>

  <wa-divider style="--color: black;"></wa-divider>

  <%= turbo_frame_tag "level", src: level_path(@selected_level) %>
<% end %>
