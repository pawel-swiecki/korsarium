<div class="wa-stack wa-gap-2xl">
  <wa-button href="<%= new_korsarium_course_path %>">
    New Course
  </wa-button>

  <% @courses.each do |course| %>
      <wa-card class="with-media with-header with-footer" style="max-width: 45ch;">
        <%= image_tag course.course_icon, slot: "media" %>

        <h2 slot="header" class="center">
          <%= course.title %>
        </h2>

        <p class="center">
          <%= course.subtitle %>
        </p>

        <wa-button-group slot="footer" class="center">
          <wa-button pill variant="brand" href="<%= korsarium_course_path(course) %>">
            View Course
          </wa-button>
        </wa-button-group>
      </wa-card>
  <% end %>
</div>
