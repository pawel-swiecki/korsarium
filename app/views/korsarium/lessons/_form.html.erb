<%= form_with model: @form_model, class: "flow" do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :introduction %>
    <%= form.text_area :introduction, rows: "10" %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, rows: "10" %>
  </div>

  <div>
    <%= form.label :summary %>
    <%= form.text_area :summary, rows: "10" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
