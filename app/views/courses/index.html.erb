<header>
  <h1>Korsarium</h1>
  <p>/koːrser.i.əm/</p>
  <p><em>noun</em></p>
  <p>a place specified for courses</p>
</header>

<section>
  <% @courses.each do |course| %>
    <%= image_tag course.course_icon if course.course_icon.attached? %>

    <h2> <%= course.title %> </h2>
    <p> <%= course.subtitle %> </p>

    <%= link_to "Enter", course_path(course) %>
  <% end %>
</section>
