<h1>Korsarium</h1>
<p>/koːrser.i.əm/</p>
<p><em>noun</em></p>
<p>a place specified for courses</p>

<% @courses.each do |course| %>
  <%= image_tag course.course_icon if course.course_icon.attached? %>
  <h1> <%= course.title %> </h1>
  <p> <%= course.subtitle %> </p>
  <%= link_to "Enter Course", course_path(course) %>
  <%= link_to "Edit", edit_course_path(course) %>
<% end %>
