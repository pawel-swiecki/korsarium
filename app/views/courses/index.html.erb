<div class="wa-stack wa-gap-2xl">
  <section class="wa-stack wa-gap-xs">
    <h1 class="center">Korsarium</h1>
    <p class="center">/koːrser.i.əm/</p>
    <p class="center"><em>noun</em></p>
    <p class="center">a place specified for courses</p>
  </section>
  <wa-divider></wa-divider>
  <% @courses.each do |course| %>
      <wa-card class="with-media with-header with-footer">
        <%= image_tag course.course_icon, slot: "media", style: "max-width: 600px;" %>
        <h2 class="center" slot="header"><%= course.title %></h2>
        <p class="center"><%= course.subtitle %></p>
        <wa-button pill class="center" slot="footer" href="<%= course_path(course) %>">Start Learning</wa-button>
      </wa-card>
  <% end %>
</div>
