<section>
  <h1>Korsarium</h1>
  <h2>/koːrser.i.əm/</h2>
  <h3><em>noun</em></h3>
  <span>a place specified for courses</span>
</section>

<section>
  <% @courses.each do |course| %>
    <%= image_tag course.course_icon if course.course_icon.attached? %>
    <h1> <%= course.title %> </h1>
    <p> <%= course.subtitle %> </p>
    <%= link_to "Enter Course", course_path(course) %>
    <%= link_to "Edit", edit_course_path(course) %>
  <% end %>
</section>
