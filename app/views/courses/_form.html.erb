<%= form_with model: course, class: "flow" do |form| %>
  <div>
    <%= form.label :course_icon %>
    <%= form.file_field :course_icon, accept: "image/*" %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle, rows: "4" %>
  </div>

    <%= form.submit %>
<% end %>
