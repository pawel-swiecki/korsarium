<%= form_with model: course do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, size: "50x2" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
