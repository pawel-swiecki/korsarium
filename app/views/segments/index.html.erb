<%= turbo_frame_tag "segments", class: "stack" do %>
    <div class="sidebar">
      <h1>Segments</h1>

      <ul>
        <% @segments.each do |segment| %>
          <li><%= link_to segment.title, segment, data: {turbo_frame: "segment"} %></li>
        <% end %>
      </ul>
    </div>
  <%= turbo_frame_tag "segment", class:"center", src: segment_path(@selected_segment) %>
<% end %>
